<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_margin = "10dp"
    tools:context=".SignUp">

    <ImageButton
        android:id="@+id/Return_from_history_to_main_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/back"
        android:background="#FFFFFF"/>

    <TextView
        android:id="@+id/Notice_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Return_from_history_to_main_button"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/blackhansans_regular"
        android:gravity="center"
        android:text="Choose the result you want to check!!"
        android:textColor="#7000FF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/ecg_history_listview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/Notice_txt"
        android:layout_marginTop="15dp"
        android:background="@drawable/border" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ecg_history_listview"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_blue"
        android:text="clear history"
        android:fontFamily="@font/blackhansans_regular"
        android:textColor="#ffffff" />

    <!--
    <Button
        android:id="@+id/button"
